@use "tailwindcss/base" as *;
@use "tailwindcss/components" as *;
@use "tailwindcss/utilities" as *;

@use "../../node_modules/normalize.css/normalize.css";

/* Variables */
@use "@assets/styles/variables/variables";

/* Mixins */
@use "@assets/styles/mixins/mixins";

/* Fonts */
@use "@assets/fonts/fonts" as *;

/* Components */
@use "@assets/styles/components" as *;

@config "../../tailwind.config.js";



h1 {
  font-size: 19px !important;
  text-align: center;
}
h2 {
  font-size: 18px !important;
  text-align: center;
}
h3 {
  font-size: 17px !important;
  text-align: center;
}

body,
#root,
.app {
  width: 100%;
  height: 100%;
}

body {
  font-family: "ProximaNova-Regular", Arial, sans-serif;

  overflow-x: hidden;

  @include bgMain;
  @include textWhite;

  padding: 0;
  margin: 0;

  @include bgMain;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-synthesis: none;
  text-rendering: auto;
  scroll-behavior: smooth;
  image-rendering: auto;

  .app {
    position: relative;
    display: flex;
    flex-direction: column;

    z-index: 2;

    @media screen and (min-width: 768px) {
      &::-webkit-scrollbar {
        width: 8px;

        background: linear-gradient(180deg, #1e2c47 0%, #1f396e 100%) no-repeat fixed;
      }

      &::-webkit-scrollbar-thumb {
        border-radius: 25px;
        background: white;
      }
    }

    section.page {
      max-width: 1200px;

      margin: 0 auto;

      @media screen and (max-width: 1200px) {
        max-width: 90%;
        min-width: 90%;
      }

      @include respond-to(mobile) {
        max-width: 100%;
        min-width: 100%;
        padding: 0 15px;
      }
    }

    .main {
      & + .footer > .footer__wrapper {
        max-width: 1200px;

        @media screen and (max-width: 1200px) {
          max-width: 90%;
          min-width: 90%;
        }

        @include respond-to(mobile) {
          max-width: 100%;
          min-width: 100%;
        }
      }
    }
  }
}


.aside-bg-premium-services {
  background: url("/media/images/img-services-bg-premium.png") no-repeat top right, white;
  background-size: cover;
}
