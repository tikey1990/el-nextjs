server {
    listen 80;

    root /usr/share/nginx/html;
    server_name dev.easyliker.ru;

    keepalive_timeout 5;

    location / {
        proxy_pass http://localhost:3000;  # Адрес nextjs сервера
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
    }

    location ~ ^/(api) {
        proxy_pass http://10.0.0.2;  # Адрес бэкенд сервера
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
    }
}